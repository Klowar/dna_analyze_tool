{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ES2020",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "public/**/*"
  ]
}
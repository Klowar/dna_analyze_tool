{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "ES2020",
        "noImplicitAny": true,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "jsx": "react",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}